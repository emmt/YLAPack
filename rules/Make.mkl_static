# Rules to use MKL:
MKL_DIR = /opt/intel/mkl
LAPACK_DEFS = -DUSE_MKL $(MKL_DEFS) -I"$(MKL_DIR)"/include
LAPACK_LIBS = -Wl,--start-group \
              "$(MKL_DIR)/lib/$(MKL_ARCH)/lib$(MKL_INTERFACE).a" \
              "$(MKL_DIR)/lib/$(MKL_ARCH)/lib$(MKL_THREAD).a" \
              "$(MKL_DIR)/lib/$(MKL_ARCH)/libmkl_core.a" \
              -Wl,--end-group -openmp -lpthread



